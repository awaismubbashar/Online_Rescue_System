<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="93dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100000024" />

    <EditText
        android:id="@+id/CNICEditTextID"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="CNIC"
        android:inputType="number"
        android:padding="20dip"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditTextID"
        app:layout_constraintVertical_bias="0.027000012" />

    <EditText
        android:id="@+id/phoneEditTextNoID"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:background="@drawable/border"
        android:ems="10"

        android:hint="Email."
        android:inputType="text"
        android:padding="20dip"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CNICEditTextID"
        app:layout_constraintVertical_bias="0.04000002" />

    <EditText
        android:id="@+id/nameEditTextID"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:layout_marginBottom="396dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:padding="20dip"
        android:textColor="@color/cardview_light_background"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileCardViewID"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/registerButtonID"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:background="@drawable/border"
        android:backgroundTint="@color/colorWhiteGray"
        android:text="Register"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressEditTextID"
        app:layout_constraintVertical_bias="0.659" />

    <EditText
        android:id="@+id/addressEditTextID"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:padding="20dip"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CNICEditTextID"
        app:layout_constraintVertical_bias="0.29000002" />

    <EditText
        android:id="@+id/password"
        android:layout_width="279dp"
        android:layout_height="58dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="20dip"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressEditTextID"
        app:layout_constraintVertical_bias="0.081" />

</androidx.constraintlayout.widget.ConstraintLayout>