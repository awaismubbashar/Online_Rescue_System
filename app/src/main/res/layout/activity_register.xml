<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit"
    android:background="@color/colorBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="93dp"
        android:layout_height="84dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156" />

    <EditText
        android:id="@+id/CNICEditTextID"
        android:layout_width="@dimen/activity_register_edittext_width"
        android:layout_height="@dimen/activity_register_edittext_hight"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Phon No."
        android:inputType="number"
        android:paddingLeft="@dimen/activity_register_edittext_padding_left"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEditTextID"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/registerButtonID"
        android:layout_width="@dimen/activity_register_edittext_width"
        android:layout_height="@dimen/activity_register_edittext_hight"
        android:background="@drawable/border"
        android:backgroundTint="@color/colorWhiteGray"
        android:text="Register"
        android:textColor="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressEditTextID"
        app:layout_constraintVertical_bias="0.750" />

    <EditText
        android:id="@+id/nameEditTextID"
        android:layout_width="@dimen/activity_register_edittext_width"
        android:layout_height="@dimen/activity_register_edittext_hight"
        android:layout_marginBottom="328dp"
        android:background="@drawable/border"
        android:hint="Full Name"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/activity_register_edittext_padding_left"

        android:textColor="@color/cardview_light_background"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileCardViewID"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/addressEditTextID"
        android:layout_width="@dimen/activity_register_edittext_width"
        android:layout_height="@dimen/activity_register_edittext_hight"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:paddingLeft="@dimen/activity_register_edittext_padding_left"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CNICEditTextID"
        app:layout_constraintVertical_bias="0.30" />

    <EditText
        android:id="@+id/phoneEditTextNoID"
        android:layout_width="@dimen/activity_register_edittext_width"
        android:layout_height="@dimen/activity_register_edittext_hight"
        android:background="@drawable/border"
        android:ems="10"

        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="@dimen/activity_register_edittext_padding_left"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CNICEditTextID"
        app:layout_constraintVertical_bias="0.037" />

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/activity_register_edittext_width"
        android:layout_height="@dimen/activity_register_edittext_hight"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/activity_register_edittext_padding_left"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressEditTextID"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/towardsLoginTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Already have an account? Login"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerButtonID"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>